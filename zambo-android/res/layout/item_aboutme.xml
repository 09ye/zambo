<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dip">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/functionIcon"
            android:layout_width="44dp"
            android:layout_height="24dp"
            android:layout_margin="5px" android:layout_gravity="center_vertical|center_horizontal"/>

        <TextView
            android:id="@+id/functionName"
            android:layout_width="180dp"
            android:layout_height="34dp"
            android:gravity="fill_vertical|center_horizontal|fill_horizontal|center"
            android:text="TextView01"
            android:textColor="@color/black"
            android:textSize="20dip" android:layout_gravity="center_vertical|center_horizontal"/>

    </LinearLayout>

</RelativeLayout>
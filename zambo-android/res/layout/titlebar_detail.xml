<?xml version="1.0" encoding="utf-8"?>
<com.mobilitychina.zambo.app.DetailTitlebar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailTitlebar"
    android:layout_width="fill_parent"
    android:layout_height="65px"
    android:background="@null"
    android:paddingLeft="4px"
    android:paddingRight="4px"
    android:paddingTop="4px" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65px" >

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:layout_marginTop="5px"
            android:background="@null"
            android:src="@drawable/icon_back"
            android:text="返回"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="60px"
            android:layout_marginRight="80px"
            android:gravity="center" >

            <TextView
                android:id="@android:id/title"
                style="@style/DetailTitleBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题" />
        </LinearLayout>

        <Button
            android:id="@+id/right_button"
            style="@style/CustomNormalButton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10px"
            android:layout_marginRight="15px"
            android:layout_marginTop="10px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:text="确定"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/rightCustomView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone" >
        </LinearLayout>

        <ImageView
            android:id="@+id/ivSeperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:src="@drawable/icon_seperator_line" />
    </RelativeLayout>

</com.mobilitychina.zambo.app.DetailTitlebar>
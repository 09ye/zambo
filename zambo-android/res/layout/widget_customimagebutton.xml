<?xml version="1.0" encoding="utf-8"?>
<com.mobilitychina.siemens.widget.CustomImageButton xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100px"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/btnAction"
        style="@style/CustomNormalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivButtonImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10px"
        android:background="@null"
        android:src="@drawable/icon_report" />

    <TextView
        android:id="@+id/tvButtonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10px"
        android:text="文字" />

</com.mobilitychina.siemens.widget.CustomImageButton>
    <style name="TitleBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowColor">#ffcccccc</item>
    </style>

    <style name="DetailTitleBar">
        <item name="android:textColor">@color/detailtitletextcolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_medium_1</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowColor">@color/detailtitletextshadowcolor</item>
    </style>

    <style name="Nongfu">
        <item name="android:textColor">#000</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>

<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomNormalButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/cutom_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/cutom_button_color</item>
    </style>
 <style name="CustomNormalImageButton" parent="android:Widget.Button">
        <item name="android:src">@drawable/cutom_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/cutom_button_color</item>
    </style>
    <style name="TextDarkMedium">
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="CustomTabButton" parent="android:Widget.Button">
